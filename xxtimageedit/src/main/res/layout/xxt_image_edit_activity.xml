<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <xxt.kareluo.imaging.view.XXTIMGView
        android:id="@+id/xxt_image_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000" />

    <ViewSwitcher
        android:id="@+id/xxt_vs_op"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@anim/xxt_image_fade_in"
        android:outAnimation="@anim/xxt_image_fade_out">

        <include layout="@layout/xxt_image_edit_opt_layout" />

        <include layout="@layout/xxt_image_edit_clip_layout" />

    </ViewSwitcher>

</FrameLayout>